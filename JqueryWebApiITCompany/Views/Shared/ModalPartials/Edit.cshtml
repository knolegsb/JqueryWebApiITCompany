@model JqueryWebApiITCompany.Models.Company

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
    <h3 class="modal-title">Edit Company</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="modal-body">

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => Model.Rank, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Rank, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Rank)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Name, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Industry, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Industry, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Industry)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Revenue, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Revenue, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Revenue)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.FiscalYear, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.FiscalYear, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.FiscalYear)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Employees, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Employees, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Employees)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.MarketCap, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.MarketCap, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.MarketCap)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => Model.Headquarters, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Headquarters, new { @class = "form-control required" })
                    <div>
                        @Html.ValidationMessageFor(m => m.Headquarters)
                    </div>
                </div>
            </div>
            
        </div>
    </div>

    <div class="modal-footer">
        <span id="progress" class="text-center" style="display: none;">
            <img src="/Images/wait.gif" alt="wait" />
            Wait..
        </span>

        <input class="btn btn-primary" type="submit" value="Save" />
        <button class="btn btn-warning" data-dismiss="modal">Close</button>
    </div>
}
<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>
