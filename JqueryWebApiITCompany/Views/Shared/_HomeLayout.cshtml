@*@using MvcSiteMapProvider.Web.Html;*@
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/favicon.ico">
    <title>@ViewBag.Title - IT Companies</title>
    <link href='http://fonts.googleapis.com/css?family=Noto+Sans:400,700' rel='stylesheet' type='text/css'>
    <link href="~/Content/styles.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--[if IE 7]><link rel="stylesheet" type="text/css" media="all" href="css/ie7.css" />< ![endif]-->
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- HEADER -->

    <nav class="navbar navbar-inverse" style="background-color: #bde6fb;">
        <div class="container">
            <div class="clearfix">                
                <div class="navbar-header">
                    <a class="" href="@(ViewContext.RouteData.Values["Action"].ToString() == "Login" ? "/" : "/Home/Index")" title="MVC 5 IT Company Rankings"><img src="~/Images/The-IT-Co-IT-Is-About-Dynamic-Relationships.png" height="180%" alt="MVC 5 IT Company Rankings" /></a>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                </div>
                @Html.Partial("_LoginPartial")
            </div>

            @if (User.Identity.IsAuthenticated)
            {
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Angular" ? "active" : "")">@Html.ActionLink("Angular", "Index", "Angular")</li>
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "SFPCompany" ? "active" : "")">@Html.ActionLink("SFPCompany", "Index", "SFPCompany")</li>
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "JqueryModal" ? "active" : "")">@Html.ActionLink("JqueryModal", "Index", "JqueryModal")</li>
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "JqueryCompany" ? "active" : "")">@Html.ActionLink("JqueryCompany", "Index", "JqueryCompany")</li>
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Company" ? "active" : "")">@Html.ActionLink("MVC5Company", "Index", "Company")</li>
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "ITCompany" ? "active" : "")">@Html.ActionLink("ITCompany", "Index", "ITCompany")</li>
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "DataTables" ? "active" : "")">@Html.ActionLink("ITCompany II", "Index", "DataTables")</li>
                    </ul>
                </div>
            }

            <!--/.nav-collapse -->
        </div>
    </nav>

    <!-- BODY -->

    <div class="container body">
       
        @RenderBody()
    </div>

    <div class="footer text-right">
        <div class="container">
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="list-inline">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Angular", "Index", "Angular")</li>
                    <li>@Html.ActionLink("SFPCompany", "Index", "SFPCompany")</li>
                    <li>@Html.ActionLink("JqueryModal", "Index", "JqueryModal")</li>
                    <li>@Html.ActionLink("JqueryCompany", "Index", "JqueryCompany")</li>
                    <li>@Html.ActionLink("MVC5Company", "Index", "Company")</li>
                    <li>@Html.ActionLink("ITCompany", "Index", "ITCompany")</li>
                    <li>@Html.ActionLink("ITCompany II", "Index", "DataTables")</li>
                </ul>
            }
            <p>
                MVC 5 Form View DataTable Samples<br>
                &copy; Copyright @DateTime.Now.Year MVC 5
            </p>
        </div>
    </div>

    <!-- end footer -->
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>