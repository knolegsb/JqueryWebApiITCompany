@*@using MvcSiteMapProvider.Web.Html;*@
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/favicon.ico">
    <title>@ViewBag.Title - Metro BSMS: Bus Stop Management System</title>
    <link href='http://fonts.googleapis.com/css?family=Noto+Sans:400,700' rel='stylesheet' type='text/css'>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--[if IE 7]><link rel="stylesheet" type="text/css" media="all" href="css/ie7.css" />< ![endif]-->
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- HEADER -->

    <nav class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="clearfix">
                <div class="navbar-header">
                    <a class="navbar-brand" href="@(ViewContext.RouteData.Values["Action"].ToString() == "Login" ? "/" : "/Home/Index")" title="Bus Stop Management System"><img src="~/img/bsms-logo.png" alt="Metro BSMS - Bus Stop Management System" /></a>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                </div>
                @Html.Partial("_LoginPartial")
            </div>

            @if (User.Identity.IsAuthenticated)
            {
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "BusStop" ? "active" : "")">@Html.ActionLink("Bus Stops", "Index", "BusStop")</li>
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "WorkOrder" ? "active" : "")">@Html.ActionLink("Work Orders", "Index", "WorkOrder")</li>
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Report" ? "active" : "")">@Html.ActionLink("Reports", "Index", "Report")</li>
                        <li class="@((ViewContext.RouteData.Values["Controller"].ToString() == "Users") || (ViewContext.RouteData.Values["Controller"].ToString() == "Account")   ? "active" : "")">@Html.ActionLink("Users", "Index", "Users")</li>
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Management" ? "active" : "")">@Html.ActionLink("Management", "Index", "Management")</li>

                        @*<li role="presentation" class="dropdown @(ViewContext.RouteData.Values["Controller"].ToString() == "Management" ? "active" : "")">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false"> Management <span class="caret"></span> </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Audit Logs", "AuditLogs", "Management")</li>
                                    <li class="divider"></li>
                                    <li><a href="data-import.html" title="Reports">Data Import</a></li>
                                    <li><a href="data-export.html" title="Reports">Data Export</a></li>
                                </ul>
                            </li>*@
                    </ul>
                </div>
            }

            <!--/.nav-collapse -->
        </div>
    </nav>

    <!-- BODY -->

    <div class="container body">

        @*@Html.MvcSiteMap().SiteMapPath()*@
        @RenderBody()
    </div>

    <div class="footer text-right">
        <div class="container">
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="list-inline">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Bus Stops", "Index", "BusStop")</li>
                    <li>@Html.ActionLink("Work Orders", "Index", "WorkOrder")</li>
                    <li>@Html.ActionLink("Reports", "Index", "Report")</li>
                    <li>@Html.ActionLink("Users", "Index", "Users")</li>
                    <li>@Html.ActionLink("Management", "Index", "Management")</li>
                    @*<li>@Html.ActionLink("Audit Logs", "AuditLogs", "Management")</li>
                        <li>@Html.ActionLink("Data Import", "ImportData", "Management")</li>
                        <li>@Html.ActionLink("Data Export", "Index", "Home")</li>*@
                </ul>
            }
            <p>
                Metro BSMS: Bus Stop Management System<br>
                &copy; Copyright @DateTime.Now.Year Metro
            </p>
        </div>
    </div>

    <!-- end footer -->
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>