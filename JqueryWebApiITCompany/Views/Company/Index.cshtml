@model IEnumerable<JqueryWebApiITCompany.Models.Company>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<link href="~/Content/index.css" rel="stylesheet" />
<p>
    @Html.ActionLink("Create New", "Create", "Company", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered table-hover" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rank)
            </th>
            <th>
                Company Name
            </th>
            <th>
                Industries
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Revenue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FiscalYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MarketCap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Headquarters)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Rank)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Industry)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.Revenue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FiscalYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employees)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.MarketCap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Headquarters)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Company", new { id = item.Id })" class="glyphicon glyphicon-edit"></a>
            <a href="@Url.Action("Details", "Company", new { id = item.Id })" class="glyphicon glyphicon-file"></a>
            <a href="@Url.Action("Delete", "Company", new { id = item.Id })" class="glyphicon glyphicon-trash"></a>
            @*@Html.ActionLink("Edit", "Edit", "", new { id=item.Id }, new { @class = "glyphicon glyphicon-edit" }) |*@
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@            
        </td>
    </tr>
}

</table>

